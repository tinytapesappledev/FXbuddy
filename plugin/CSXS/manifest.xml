<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="11.0" ExtensionBundleId="com.fxbuddy.bundle" ExtensionBundleVersion="1.0.0"
  ExtensionBundleName="FXbuddy" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <ExtensionList>
    <Extension Id="com.fxbuddy.panel" Version="1.0.0" />
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <!-- Premiere Pro -->
      <Host Name="PPRO" Version="[23.0,99.9]" />
      <!-- After Effects -->
      <Host Name="AEFT" Version="[23.0,99.9]" />
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="11.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="com.fxbuddy.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./client/dist/index.html</MainPath>
          <ScriptPath>./host/index.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--allow-file-access-from-files</Parameter>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>FXbuddy</Menu>
          <Geometry>
            <Size>
              <Height>680</Height>
              <Width>450</Width>
            </Size>
            <MinSize>
              <Height>500</Height>
              <Width>350</Width>
            </MinSize>
            <MaxSize>
              <Height>900</Height>
              <Width>600</Width>
            </MaxSize>
          </Geometry>
          <Icons />
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>

</ExtensionManifest>
