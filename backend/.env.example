# FXbuddy Backend Configuration
# ================================

# Environment
NODE_ENV=development

# Server
PORT=4000
CORS_ORIGIN=*

# Database (PostgreSQL for production, SQLite for local dev)
# Set DATABASE_URL to use PostgreSQL; leave empty for local SQLite
DATABASE_URL=

# Authentication
JWT_SECRET=change-me-to-a-random-64-char-string
JWT_REFRESH_SECRET=change-me-to-another-random-64-char-string

# Stripe (required for billing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_STARTER_PRICE_ID=price_...
STRIPE_PRO_PRICE_ID=price_...
STRIPE_STUDIO_PRICE_ID=price_...
STRIPE_ENTERPRISE_PRICE_ID=price_...

# AI Providers
RUNWAY_API_KEY=your_runway_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
FAL_KEY=your_fal_ai_key_here

# S3-compatible Storage (required for production, optional for local dev)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=

# Sentry (optional, for error monitoring)
SENTRY_DSN=
